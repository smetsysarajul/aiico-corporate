<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.1" client="site" method="upgrade">
	<name>mod_aiico_service</name>
	<author>Lujara Systems</author>
	<creationDate>October 2019</creationDate>
	<copyright>Copyright (C) 2005 - 2019 Open Source Matters. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@lujarasystems.com</authorEmail>
	<authorUrl>http://lujarasystems.com</authorUrl>
	<version>1.0.0</version>
	<description>Aiico service pages modules</description>
	<files>
		<filename module="mod_aiico_service">mod_aiico_service.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
	</files>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_MENU" />
	<config>
		<fields name="params"> 
			<fieldset name="basic">
				<field 
					name='plan_title'
					type='text'
					label='Plan Title'
					required='1'
				/>
				<field 
					name='caption_image'
					type='media'
					label='Caption Image'
					required='1'
				/>
				<field 
					name='product_section'
					type='editor'
					label='Product Section'
					filter='safehtml'
					required='1'
				/>
				<field 
					name='benefit_section'
					type='editor'
					label='Benefit Section'
					required='1'
					filter='safehtml'
				/>
				<field 
					name='premium_section'
					type='editor'
					label='Premium Section'
					filter='safehtml'
				/>
				<field 
					name='extra'
					type='editor'
					label='Foot note content'
					filter='safehtml'
				/>
				<field 
					name='action_text'
					type='text'
					label='Action Text'
				/>
				<field 
					name='action_link'
					type='menuitem'
					label='Action Page'
				/>

			</fieldset>

		</fields>
	</config>
</extension>